<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

    <!-- Logout Button (Top-Right) -->
    <ImageButton
        android:id="@+id/logoutButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:scaleType="centerInside"
        android:src="@drawable/ic_logout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_margin="16dp" />

    <!-- Profile Image -->
    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_profile_outlined"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_marginTop="50dp"/>

    <!-- User Name -->
    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gal Yaakov"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/profileImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_marginTop="8dp"/>

    <!-- FP Badge -->
    <TextView
        android:id="@+id/fpBadge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="150 FP"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_orange_light"
        android:background="@drawable/bg_fp_badge"
        android:padding="6dp"
        app:layout_constraintTop_toBottomOf="@id/userName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_marginTop="4dp"/>


    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/sportsFlow"
        app:layout_constraintTop_toBottomOf="@id/fpBadge"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/bg_sports_flow"
        app:flow_wrapMode="chain"
        app:flow_horizontalGap="8dp"
        app:flow_verticalGap="8dp"
        app:flow_horizontalAlign="start"
        app:flow_verticalAlign="top"
        app:flow_firstHorizontalBias="0.0"
        android:layout_height="75dp"
        android:layout_width="300dp"/>

    <TextView
        android:id="@+id/sportsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Sports:"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/sportsFlow"
        app:layout_constraintTop_toBottomOf="@id/fpBadge"
        app:layout_marginStart="16dp"
        app:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/label1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Label"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:background="@drawable/bg_label"
        android:layout_marginStart="21dp"
        android:layout_marginBottom="4dp"
        android:padding="6dp"
        app:layout_constraintBottom_toTopOf="@id/postsRecyclerView"
        app:layout_constraintStart_toStartOf="@id/sportsFlow"/>

    <TextView
        android:id="@+id/label2"
        style="@style/LabelStyle"
        android:text="Label"
        android:layout_marginStart="21dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toTopOf="@id/postsRecyclerView"
        app:layout_constraintStart_toEndOf="@id/label1"/>


    <TextView
        android:id="@+id/label3"
        style="@style/LabelStyle"
        android:text="Label"
        android:layout_marginStart="21dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toTopOf="@id/postsRecyclerView"
        app:layout_constraintStart_toEndOf="@id/label2"/>

    <TextView
        android:id="@+id/label4"
        style="@style/LabelStyle"
        android:text="Label"
        android:layout_marginStart="21dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toTopOf="@id/postsRecyclerView"
        app:layout_constraintStart_toEndOf="@id/label3"/>

    <!-- Posts List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/postsRecyclerView"
        android:layout_width="300dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/sportsFlow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>